{
  "name": "my-project",
  "version": "1.0.0",
  "description": "My project using pnpm workspaces",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared"
  ],
  "scripts": {
    "fmt": "prettier-no-jsx-parens -w .",
    "build": "tsc -b .; pnpm -r run build",
    "killdev": "pkill -ife tsc; pkill -ife vite; pkill -ife nodemon; pkill -ife server.ts",
    "psql": ". server/.env && psql postgresql://$PGUSER:$PGPASSWORD@localhost/$PGDATABASE"
  },
  "dependencies": {
    "prettier-no-jsx-parens": "^3.4.0",
    "typescript": "5.7.3",
    "zod": "^3.24.1"
  }
}
